@model IEnumerable<ClosetApp.Models.Bottom>

@{
    ViewBag.Title = "Bottoms";
}

<body class="itemsbody">
    <h2 class="itemstitle">MY BOTTOMS</h2>

    <p>
        @Html.ActionLink("ADD A BOTTOM", "Create")
    </p>

    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Content/@item.Photo" alt="A Bottom">
                    <div class="caption">
                        <hr />
                        <h3 class="itemname">@Html.DisplayFor(modelItem => item.Name)</h3>

                        <p class="buttons">
                            @Html.ActionLink("Details", "Details", new { id = item.BottomID }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }, new { @class = "btn btn-warning" })

                            @Html.ActionLink("Delete", "Delete", new { id = item.BottomID }, new { @class = "btn btn-default" })
                        </p>
                    </div>
                </div>
            </div>


        }

    </div>

</body>


